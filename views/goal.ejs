<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/gen.css">
    <link rel="stylesheet" href="styles/goal.css">
    <title>GlowPath</title>
</head>
<body>
    <header>
        <% goals.forEach(function(goals) { %>
            <h1>GLOWPATH</h1>
            <!-- waarom geen "fdnd-acency.....", omdat de data al een link bevat dus basis URL niet nodig -->
            <a href="<%= goals.link %>">Bekijk de Pinterest-pagina</a>
            <!-- cover -->
            <div class="cover">
                <img src="https://fdnd-agency.directus.app/assets/<%= goals.foto1 %>" alt="afbeelding">
                <img src="https://fdnd-agency.directus.app/assets/<%= goals.foto2 %>" alt="afbeelding">
                <img src="https://fdnd-agency.directus.app/assets/<%= goals.foto3 %>" alt="afbeelding">
            </div>
        <% }) %>
    </header>

    <main>
        <% goals.forEach(function(goals) { %>
            <h2><%= goals.titel %></h2>
            <div>
                <img src="/assets/profilepic.png" alt="profielfoto">
                <p class="datum"><%= goals.datum %></p>
            </div>

            <form action="" method="post" class="listform">
                <label><%= goals.antwoord1 %></label>
                <input type="text" name="" id="">
                <br>
                <label><%= goals.antwoord2 %></label>
                <input type="text" name="" id="">
                <br>
                <label><%= goals.antwoord3 %></label>
                <input type="text" name="" id="">
                <br>
                <label><%= goals.antwoord4 %></label>
                <input type="text" name="" id="">
                <br>
                <label><%= goals.antwoord5 %></label>  
                <input type="text" name="" id="">
  
                <input type="submit">
            </form>
        <% }) %>


    </main>
</body>
</html>