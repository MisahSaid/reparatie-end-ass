<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/gen.css">
    <link rel="stylesheet" href="styles/goal.css">
    <title>GlowPath</title>
</head>
<body>
    <header>
        <h1>GLOWPATH</h1>
    </header>

    <main>
        <% if (goals && goals.length > 0) { %>
            <% goals.forEach(function(goal) { %>
                <section class="cover">
                    <!-- waarom geen "fdnd-agency.....", omdat de data al een link bevat dus basis URL niet nodig -->
                    <a href="<%= goal.link %>">Bekijk de Pinterest-pagina</a>
                    <img class="A" src="https://fdnd-agency.directus.app/assets/<%= goal.foto1 %>" alt="afbeelding">
                    <img class="B" src="https://fdnd-agency.directus.app/assets/<%= goal.foto2 %>" alt="afbeelding">
                    <img class="C" src="https://fdnd-agency.directus.app/assets/<%= goal.foto3 %>" alt="afbeelding">
                </section>

                <h2><%= goal.titel %></h2>
                <div class="pf">
                    <img src="/assets/profilepic.png" alt="profielfoto">
                    <p class="datum"><%= goal.datum %></p>
                </div>

                <form method="post" class="listform">
                    <% if (goal.antwoord1) { %>
                        <label for="answer1"><%= goal.antwoord1 %></label>
                        <input type="text" id="answer1" placeholder="[your answer ...]">
                        <br>
                        <label for="answer2"><%= goal.antwoord2 %></label>
                        <input type="text" id="answer2" placeholder="[your answer ...]">
                        <br>
                        <label for="answer3"><%= goal.antwoord3 %></label>
                        <input type="text" id="answer3" placeholder="[your answer ...]">
                        <br>
                        <label for="answer4"><%= goal.antwoord4 %></label>
                        <input type="text" id="answer4" placeholder="[your answer ...]">
                        <br>
                        <label for="answer5"><%= goal.antwoord5 %></label>
                        <input type="text" id="answer5" placeholder="[your answer ...]">
                        <br>
                        <input class="submitbutton" type="submit" value="SAVE">
                    <% } %>
                </form>
            <% }); %>
        <% } %>

        <div class="loader"></div>

        <div class="added">
            <p>New goal added to your list!</p>
        </div>
    </main>
</body>
</html>
